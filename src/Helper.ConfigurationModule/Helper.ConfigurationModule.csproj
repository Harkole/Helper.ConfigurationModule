<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <PackageId>Configuration Helper</PackageId>
    <Authors>Will Blackburn</Authors>
    <Description>
      Provides extension methods to quickly load `appsettings.json` configuration details in to an application
    </Description>
    <PackageReleaseNotes>
      Initial Release
    </PackageReleaseNotes>
    <IsPackage>true</IsPackage>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.3" />
  </ItemGroup>
</Project>
